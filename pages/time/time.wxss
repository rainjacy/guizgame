page {
  height: 100vh;
  background: linear-gradient(135deg, #81D4FA 0%, #FFF9C4 100%);
  display: flex;
  flex-direction: column;
}

.time-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 32rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #2196F3;
  margin-bottom: 60rpx;
  text-align: center;
}

.time-options {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.time-card {
  width: 100%;
  min-width: 0;
  height: 120rpx;
  background: #fff;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #2196F3;
  font-weight: bold;
  margin-bottom: 0;
  box-shadow: 0 8rpx 24rpx rgba(129, 212, 250, 0.08);
  border: 4rpx solid transparent;
  transition: all 0.2s;
}

.time-card.selected {
  border-color: #FF9800;
  color: #FF9800;
  background: #FFFDE7;
  box-shadow: 0 12rpx 32rpx rgba(255, 152, 0, 0.12);
}

.time-value {
  font-size: 48rpx;
  font-weight: bold;
}

.unit {
  font-size: 28rpx;
  margin-left: 4rpx;
}

.footer {
  width: 100%;
  padding: 24rpx 32rpx;
  box-sizing: border-box;
  background: #fff;
  border-top: 1rpx solid #eee;
}

.confirm-btn {
  width: 100%;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FF9800;
  color: #fff;
  font-size: 40rpx;
  font-weight: bold;
  border-radius: 48rpx;
  box-shadow: 0 8rpx 24rpx #ffb6d5;
  margin-top: 0;
  transition: transform 0.1s;
  border: none;
  letter-spacing: 2rpx;
}
.confirm-btn:active {
  transform: scale(0.97);
} 