/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #FFEB3B 0%, #FF9800 100%);
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}
.index-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 32rpx;
}
.logo {
  font-size: 54rpx;
  font-weight: 900;
  margin-bottom: 80rpx;
  color: #333;
  text-shadow: 0 2rpx 8rpx #fffde7;
  letter-spacing: 2rpx;
  text-align: center;
  border-radius: 16rpx;
  padding: 16rpx 0 12rpx 0;
  box-sizing: border-box;
  background: #FFF9C4;
  display: inline-block;
}
.logo-highlight {
  color: #2196F3;
  font-weight: 900;
  font-size: 60rpx;
  margin: 0 4rpx;
}
.start-btn, .rule-btn {
  width: 80vw;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FF4081;
  color: #fff;
  font-size: 40rpx;
  font-weight: bold;
  border-radius: 48rpx;
  box-shadow: 0 8rpx 24rpx #ffb6d5;
  margin-bottom: 32rpx;
  transition: transform 0.1s;
  border: none;
  letter-spacing: 2rpx;
}
.start-btn:active, .rule-btn:active {
  transform: scale(0.96);
}
.rule-btn {
  background: #fff;
  color: #FF4081;
  border: 2rpx solid #FF4081;
  box-shadow: 0 4rpx 12rpx #ffe0ec;
}
.copyright {
  position: absolute;
  bottom: 32rpx;
  left: 0;
  width: 100vw;
  text-align: center;
  color: #888;
  font-size: 22rpx;
  opacity: 0.7;
}
