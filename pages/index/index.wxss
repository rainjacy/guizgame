/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #FFEB3B 0%, #FF9800 100%);
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}
.index-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 32rpx;
}
.logo {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 80rpx;
  color: #FF4081;
  text-shadow: 2rpx 4rpx 8rpx #fffde7;
}
.start-btn {
  width: 80vw;
  margin-bottom: 32rpx;
  background: #FF4081;
  color: #fff;
  font-size: 36rpx;
  border-radius: 48rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx #ffb6d5;
  transition: transform 0.1s;
}
.start-btn:active {
  transform: scale(0.96);
}
.rule-btn {
  width: 80vw;
  background: #fff;
  color: #FF4081;
  font-size: 32rpx;
  border-radius: 48rpx;
  border: 2rpx solid #FF4081;
  margin-bottom: 80rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx #ffe0ec;
  transition: transform 0.1s;
}
.rule-btn:active {
  transform: scale(0.96);
}
.copyright {
  position: absolute;
  bottom: 32rpx;
  left: 0;
  width: 100vw;
  text-align: center;
  color: #888;
  font-size: 22rpx;
  opacity: 0.7;
}
