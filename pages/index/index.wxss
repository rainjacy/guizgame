/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #FFEB3B 0%, #FF9800 100%);
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}
.index-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 45vh;
  z-index: 0;
  border-bottom-left-radius: 80rpx;
  border-bottom-right-radius: 80rpx;
  box-shadow: 0 8rpx 32rpx #81D4FA44;
}
.index-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 32rpx;
  position: relative;
  z-index: 1;
}
.logo-area {
  margin-top: 80rpx;
  margin-bottom: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.logo {
  font-size: 70rpx;
  font-weight: 900;
  color: #333;
  text-shadow: 0 4rpx 16rpx #fffde7, 0 2rpx 8rpx #4FC3F7;
  letter-spacing: 4rpx;
  text-align: center;
  border-radius: 24rpx;
  padding: 18rpx 0 12rpx 0;
  box-sizing: border-box;
  background: none;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 90vw;
}
.logo-highlight {
  color: #2196F3;
  font-weight: 900;
  font-size: 70rpx;
  margin: 0 4rpx;
}
.logo-desc {
  font-size: 28rpx;
  color: #888;
  margin-top: 12rpx;
  letter-spacing: 2rpx;
  text-align: center;
}
.btn-group {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 32rpx;
  margin-bottom: 60rpx;
}
.start-btn, .rule-btn {
  width: 80vw;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: bold;
  border-radius: 48rpx;
  letter-spacing: 2rpx;
  box-shadow: 0 8rpx 24rpx #b3e5fc;
  border: none;
  transition: transform 0.1s;
}
.start-btn {
  background: #2196F3;
  color: #fff;
}
.start-btn:active {
  transform: scale(0.96);
  background: #1976D2;
}
.rule-btn {
  background: #fff;
  color: #FF9800;
  border: 2rpx solid #FF9800;
  box-shadow: 0 4rpx 12rpx #ffe0ec;
}
.rule-btn:active {
  transform: scale(0.96);
  background: #FFF3E0;
}
.copyright {
  position: absolute;
  bottom: 32rpx;
  left: 0;
  width: 100vw;
  text-align: center;
  color: #888;
  font-size: 22rpx;
  opacity: 0.7;
}
.index-illust {
  width: 500rpx;
  height: auto;
  margin-top: 48rpx;
  margin-bottom: 12rpx;
  display: block;
  z-index: 2;
  position: relative;
}
