/* pages/result/result.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.result-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #FFF176 0%, #FFD54F 100%);
  padding: 32rpx;
  box-sizing: border-box;
}

/* 得分面板 */
.score-panel {
  width: 100%;
  background: white;
  border-radius: 24rpx;
  box-shadow: 0 16rpx 48rpx rgba(0,0,0,0.1);
  padding: 48rpx;
  box-sizing: border-box;
  text-align: center;
  margin-bottom: 40rpx;
}

.score-title {
  font-size: 36rpx;
  color: #888;
  margin-bottom: 24rpx;
}

.score-value {
  font-size: 100rpx;
  font-weight: bold;
  color: #FFC107;
  text-shadow: 0 4rpx 8rpx rgba(255, 193, 7, 0.3);
}

/* 词语面板 */
.words-panel {
  flex: 1;
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  min-height: 0;
}

.words-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  text-align: center;
  flex-shrink: 0;
}

.word-list-scroll {
  flex: 1;
}

.word-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.word-item {
  background: #f7f8fa;
  padding: 12rpx 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #555;
}

.no-words {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #888;
}

/* 操作面板 */
.actions-panel {
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
  gap: 32rpx;
}

.action-btn {
  flex: 1;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 48rpx;
  font-size: 40rpx;
  font-weight: bold;
  border: none;
  transition: transform 0.1s;
  letter-spacing: 2rpx;
}

.action-btn:active {
  transform: scale(0.96);
}

.restart-btn {
  background: #FF9800;
  color: white;
  box-shadow: 0 8rpx 24rpx rgba(255, 152, 0, 0.3);
}

.share-btn {
  background: white;
  color: #FF9800;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.1);
}